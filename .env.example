# Backend
BACKEND_LOG_LEVEL=INFO
DEFAULT_ACTION=BLOCK  # BLOCK or FORWARD
LISTEN_UDP_PORT=514
LISTEN_TCP_PORT=514

# Frontend
VITE_API_BASE=http://backend:8000

# Forwarding destination (can be overridden via Settings UI at runtime)
DEST_HOST=127.0.0.1
DEST_PORT=5515
DEST_PROTOCOL=udp  # udp or tcp

# Storage limits (in MB) for temporary caches
MAX_TEMP_STORAGE_MB=200
MAX_DROPPED_STORAGE_MB=100
MAX_THRESHOLD_REACHED_STORAGE_MB=100

# Forwarding threshold
THRESHOLD_ENABLED=false
THRESHOLD_BYTES=0
THRESHOLD_PERIOD=1d   # 1d, 7d, 30d, or ISO8601 duration like P3D/PT12H
